---
import MainSocialMedia from "../components/MainSocialMedia.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Devika C V">
  <main>
    <center class="mt-40">
      <div class="hero-img w-44 h-44"></div>
      <div
        class="home-content mt-8 px-2 w-full sm:w-60 md:w-96 lg:w-full text-wrap slide-in"
      >
        <h1 class="text-white font-extrabold text-2xl text-center">
          I'm <span class="text-3xl">DEVIKA C V</span>
        </h1>
        <p
          class="text-gray-200 w-full md:w-96 text-center font-normal mt-2 text-sm"
        >
          I'm learning backend development using Django and Flask, and improving my problem-solving skills
           by practicing Data Structures and Algorithms on LeetCode and CodeChef.
        </p>
        <div class="md:space-x-2">
          <button
            type="button"
            class="my-2 text-white know-btn font-light rounded-lg text-sm px-3 py-0 text-center inline-flex items-center"
          >
            <a href="/About">About me</a>

            <svg
              class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"></path>
            </svg>
          </button>
          <button
            type="button"
            class="my-2 text-white know-btn font-light rounded-lg text-sm px-3 py-0 text-center inline-flex items-center"
          >
            <a href="/Projects">My projects</a>

            <svg
              class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"></path>
            </svg>
          </button>
        </div>
        <MainSocialMedia />
      </div>
    </center>
  </main>

  <style>
    .hero-img {
      position: relative;
      border: 3px solid rgb(255, 255, 255);
      border-radius: 50%;
      background-image: url(/images/devika-img.jpg);
      background-position: center;
      background-size: cover;
      box-shadow: 0 0px 100px rgba(255, 255, 255, 0.315);
      animation: upDown 2s infinite;
    }

    @keyframes upDown {
      0% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-25px);
      }
      100% {
        transform: translateY(0);
      }
    }

    .slide-in {
      transform: translateX(-100%);
      opacity: 0;
      animation: slideIn 1s forwards;
    }

    @keyframes slideIn {
      from {
        transform: translateX(-100%);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

    .know-btn {
      border-radius: 16px;
      box-shadow: 0px 0px 30px rgba(240, 235, 235, 0.228);
      border: 1px solid rgba(255, 255, 255, 0.354);
      transition: transform 0.3s ease-in-out;
    }

    .know-btn:hover {
      transform: scale(1.1);
    }
  </style>
</Layout>
